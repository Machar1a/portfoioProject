<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scoreboard</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .scoreboard {
            display: flex;
            flex-direction: column;
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
        }

        .scoreboard h2 {
            text-align: center;
            margin-bottom: 1rem;
        }

        .scores {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .score-entry {
            display: flex;
            justify-content: space-between;
            padding: 1rem;
            background-color: #f7f7f7;
            border-radius: 5px;
        }

        .score-entry:nth-child(even) {
            background-color: #e9e9e9;
        }

        .home-btn {
            padding: 1rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 1.5rem;
            align-self: center;
        }

        .home-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="scoreboard">
            <h2>Scoreboard</h2>
            <div class="scores">
                <% scores.forEach(function(score) { %>
                    <div class="score-entry">
                        <span><%= score.username %></span>
                        <span><%= score.highScore %></span>
                    </div>
                <% }); %>
            </div>
            <button class="home-btn" onclick="location.href='/'">Back to Home</button>
        </div>
    </div>

</body>
</html>

